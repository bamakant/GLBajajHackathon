<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="Name:"
                    android:textColor="@color/reportPrimaryDark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_name_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roti"
                    android:textColor="@color/reportPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:text="Quantity:"
                    android:textColor="@color/reportPrimaryDark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_quantity_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 pieces"
                    android:textColor="@color/reportPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textColor="@color/reportPrimaryDark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_add_row"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E Block Alpha 1 market"
                    android:textColor="@color/reportPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contributor:"
                    android:textColor="@color/reportPrimaryDark"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_contri_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ashutosh"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/reportPrimary" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/caller_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_phone_blue" />
    </LinearLayout>
</android.support.v7.widget.CardView>